extends layout

block content
  main.page-content
    section.search-results
      h1.visually-hidden Результаты поиска
      .search-results__wrapper
        if offers.length
          p.search-results__label
            | Найдено
            span.js-results #{offers.length} публикации
          ul.search-results__list
            each offer in offers
              li.search-results__item
                .ticket-card.ticket-card--color05
                  .ticket-card__img
                    img(src= '/img/' + offer.picture, srcset='/img/' + offer.picture2x, alt='Изображение товара')
                  .ticket-card__info
                    span.ticket-card__label= offer.type
                    .ticket-card__categories
                      each category in offer.category
                        a(href='#')= category
                    .ticket-card__header
                      h3.ticket-card__title
                        a(href='#')= offer.title
                      p.ticket-card__price
                        span.js-sum= offer.sum
                        |  ₽
                    .ticket-card__desc
                      p= offer.description
        else
          .search-results__message
            p
              | Не найдено
              br
              | ни одной публикации
    include elements/tickets-list
